{
    "tweetwall": {
        "query": "<YOUR_QUERY>",
        "title": "The JavaFX Cinema Tweetwall for <YOUR_NAME_HERE>!",
        "stylesheetResource": "tweetwall.css"
    },

    "stepEngine": {
        "dataProviderSettings": [
            {
                "dataProviderClassName": "org.tweetwallfx.stepengine.dataproviders.TweetStreamDataProvider",
                "config": {
                    "hideRetweets": true,
                    "historySize": 50,
                    "maxTweets": 100
                }
            }
        ],
        "steps": [
            {
                "stepClassName": "org.tweetwallfx.conference.stepengine.steps.ShowSchedule",
                "config": {
                    "layoutX": 35,
                    "layoutY": 215,
                    "width": 980,
                    "sessionHeight": 150,
                    "showAvatar": true,
                    "avatarArcSize": 16,
                    "avatarSize": 50,
                    "avatarSpacing": 4,
                    "showFavourite": true,
                    "stepDuration": 500
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.InfiniteScrollingTweetsStep",
                "config": {
                    "layoutX": 1050,
                    "layoutY": 215,
                    "height": 630,
                    "tweetGap": 10,
                    "tweetWidth": 200,
                    "stepDuration": 5000,
                    "speed": 25,
                    "columns": 3,
                    "columnGap": 10,
                    "numberOfTweets": 50,
                    "stepIdentifier": "rightHandSideInfiniteScrolling",
                    "vOffset": 400
                }
            },
            {
                "stepClassName": "org.tweetwallfx.stepengine.steps.PauseStep",
                "config": {
                    "unit": "SECONDS",
                    "amount": "30"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#scheduleNode"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.stepengine.steps.ShowSchedule",
                "config": {
                    "layoutX": 35,
                    "layoutY": 215,
                    "width": 980,
                    "sessionHeight": 150,
                    "showAvatar": true,
                    "avatarArcSize": 16,
                    "avatarSize": 50,
                    "avatarSpacing": 4,
                    "showFavourite": true,
                    "stepDuration": 500
                }
            },
            {
                "stepClassName": "org.tweetwallfx.stepengine.steps.PauseStep",
                "config": {
                    "unit": "SECONDS",
                    "amount": "15"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.stepengine.steps.GenericShutdownStep",
                "config": {
                    "stepToTerminate": "rightHandSideInfiniteScrolling"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.FadeInCloudStep",
                "config": {
                    "layoutX": 1100,
                    "layoutY": 210,
                    "width": 800,
                    "height": 550,
                    "stepDuration": 15000
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#scheduleNode"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.stepengine.steps.ShowSchedule",
                "config": {
                    "layoutX": 35,
                    "layoutY": 215,
                    "width": 980,
                    "sessionHeight": 150,
                    "showAvatar": true,
                    "avatarArcSize": 16,
                    "avatarSize": 50,
                    "avatarSpacing": 4,
                    "showFavourite": true,
                    "stepDuration": 500
                }
            },
            {
                "stepClassName": "org.tweetwallfx.stepengine.steps.PauseStep",
                "config": {
                    "unit": "SECONDS",
                    "amount": "15"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.CloudFadeOutStep"
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#scheduleNode"
                }
            }
        ]
    }
}
